<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CatGallery" parent="Theme.Splash">

    </style>

    <style name="MyToolbar" parent="">
        <!--item name="titleTextColor">@color/white</item-->
        <!--item name="iconTint">@color/white</item-->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item> <!--Sem esse o layout fica falho-->
        <item name="titleMargin">8dp</item>  <!--faz o titulo da pag. ir pra direita-->
        <item name="maxButtonHeight">68dp</item>
        <item name="collapseIcon">?attr/homeAsUpIndicator</item>
        <item name="buttonGravity">top</item>
    </style>

    <style name="Theme.Splash" parent="Theme.Material3.DayNight">
        <item name="toolbarStyle">@style/MyToolbar</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorLight</item> <!--cor da barra de notificação-->
        <item name="colorPrimary">@color/primaryColorLight</item> <!--cor de fundo do app bar-->
        <item name="colorOnBackground">@color/primaryLightColorLight</item> <!--Define a cor de fundo do Splash-->
        <item name="colorSecondary">?attr/colorPrimaryVariant</item> <!--pin da pesquisa-->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorOnBackground</item>
    </style>

</resources>